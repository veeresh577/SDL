    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <!--stroke android:width="1dip" android:color="#e6f9ff" /-->
            <gradient android:angle="-90" android:startColor="#99ffdd" android:endColor="#99ffdd"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#99ffdd" />
            <solid android:color="#99ffdd"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <!--stroke android:width="1dip" android:color="#e6f9ff" /-->
            <gradient android:angle="-90" android:startColor="#99ffdd" android:endColor="#99ffdd" />
        </shape>
    </item>

</selector>